@model SliderDetailVM

<div class="container">
    <h1>Slider Detail</h1>
    <div class="product-image d-flex gap-4 justify-content-center">

        <img src="~/images/slider/@Model.Image" alt="Slider Image" />

    </div>
    <div class="product-info">
        <div class="product-name">@Model.Status</div>
        <div class="product-brand">Date: @Model.CreateDate</div>
    </div>
    <div style="display:flex; justify-content:right">
        <a asp-action="Index" class="btn btn-outline-danger">Back</a>
    </div>
</div>

@section AdminCss{
    <link rel="stylesheet" href="~/admin/css/detail.css" />
}

@section AdminScript{
    <script src="~/admin/js/detail.js"></script>
}