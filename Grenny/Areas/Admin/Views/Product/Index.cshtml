@model List<ProductVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
                <div class="bg-secondary rounded h-100 p-4">
                <h6 style="font-size:24px" class="mb-5">Product</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr style="color:wheat">
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category>SubCategory</th>
                                <th scope="col">Brand</th>
                                <th scope="col">Discount</th>
                                <th scope="col">StockCount</th>
                                <th scope="col">Price</th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="color:floralwhite" class="parent">
                                    <td><img style="width:100px; height:75px" src="~/images/product/@item.Image" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Category > @item.SubCategory</td>
                                    <td>@item.Brand</td>
                                    <td>@item.Discount</td>
                                    <td>@item.StockCount</td>
                                    <td>@item.Price</td>
                                    <td class="d-flex flex-column align-items-center">
                                        <div class="d-flex justify-content-center align-items-center ">
                                            <a class="btn btn-outline-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                        </div>
                                        <div class="d-flex justify-content-center align-items-center my-2 ">
                                    
                                            <button type="submit" data-id="@item.Id" id="delete" class="btn btn-outline-danger"><i class="fa-sharp fa-solid fa-trash"></i></button>
                                        </div>
                                        <div class="d-flex justify-content-center align-items-center ">
                                            <a class="btn btn-outline-info" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Product" asp-action="Add" class="float-right my-3 btn btn-outline-success">Add Product</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section AdminScript{
    <script src="~/admin/js/product.js"></script>
}