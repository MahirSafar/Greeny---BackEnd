@model List<SliderVM>
@{
    ViewData["Title"] = "Index";
}

<style>
    .status-slider {
        width: 25px;
        height: 25px;
        border-radius: 50%;
        cursor: pointer;
    }

    .status-true {
        background-color: greenyellow;
    }

    .status-false {
        background-color: red;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 style="font-size:24px" class="mb-5">Slider</h6>
                <div class="table-responsive">
                    <a asp-controller="Slider" asp-action="Add" class="float-right my-3 btn btn-outline-success">Add Slider</a>
                    <table class="table">
                        <thead>
                            <tr style="color:wheat; text-align:center">
                                <th scope="col">Slider</th>
                                <th scope="col">Status</th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="color:floralwhite" class="parent">
                                    <td><img style="width:100px; height:75px" src="@Url.Content("~/images/slider/" + item.Image)" /></td>
                                    <td >
                                        <div data-id="@item.Id" class="status-slider  @(item.Status? "status-true" : "status-false")" style="width:30px; height:30px; border-radius:50%;"></div>
                                    </td>
                                    <td class="d-flex flex-column align-items-center">
                                        <div class="d-flex justify-content-center align-items-center ">
                                            <a class="btn btn-outline-warning" asp-controller="Slider" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                        </div>
                                        <div class="d-flex justify-content-center align-items-center my-2 ">
                                            <button type="submit" data-id="@item.Id" class="btn btn-outline-danger slider-delete"><i class="fa-sharp fa-solid fa-trash"></i></button>
                                        </div>
                                        <div class="d-flex justify-content-center align-items-center ">
                                            <a class="btn btn-outline-info" asp-controller="Slider" asp-action="Detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section AdminScript{
    <script src="~/admin/js/custom.js"></script>
    <script src="~/admin/js/slider.js"></script>
}
